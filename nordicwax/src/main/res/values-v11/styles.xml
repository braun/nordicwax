<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
           <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
       </style>
   <style name="AppTheme.ActionBar"  parent="@android:style/Widget.Holo.Light.ActionBar">        
          <item name="android:background">@color/lightblue_nw</item>
            
          <item name="android:titleTextStyle">@style/AppTheme.TextAppearance.Medium</item>
    </style>

   <style name="AppBaseDialogTheme" parent="@android:style/Theme.Holo.Dialog">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    
    </style>
    
</resources>
